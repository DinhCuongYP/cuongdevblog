<div class='container mt-4'>
  <form method='POST' action='/courses/{{courser._id}}?_method=PUT'>
    <h3>Sửa Thông Tin Khoá Học</h3>
    <div class='form-group'>
      <label for='name'>Name</label>
      <input type='text' class='form-control' value='{{courser.name}}' id='name' name='name' />
    </div>

    <div class='form-group'>
      <label for='description'>Description</label>
      <textarea
        class='form-control'
        name='description'
        id='description'
      >{{courser.description}}</textarea>
    </div>

    <div class='form-group'>
      <label for='videoId'>VideoId</label>
      <input
        type='text'
        class='form-control'
        value='{{courser.videoId}}'
        id='videoId'
        name='videoId'
      />
    </div>

    <div class='form-group'>
      <label for='level'>Level</label>
      <input type='text' class='form-control' value='{{courser.level}}' id='level' name='level' />
    </div>
    <button type='submit' class='btn btn-primary mt-4'>Lưu Lại</button>
  </form>
</div>