<div class='mt-4 container'>
  <h1>Khoá học của tôi</h1>

  <table class='mt-4 table'>
    <thead>
      <tr>
        <th scope='col'>#</th>
        <th scope='col'>Khoá Học</th>
        <th scope='col'>Trình Độ</th>
        <th scope='col'>Thời Gian</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each coursers}}
        <tr>
          <th scope='row'>{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.level}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a href='/courses/{{this._id}}/me' class='btn btn-link'>Sửa</a>
            <a href='' class='btn btn-link'>Xoá</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>